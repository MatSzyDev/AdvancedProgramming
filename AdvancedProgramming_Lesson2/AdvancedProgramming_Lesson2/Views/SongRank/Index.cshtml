@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Program> Localizer
@model IEnumerable<AdvancedProgramming_Lesson2.Models.SongRank>

@{ ViewData["Title"] = "Index"; }

<h1>@Localizer["Songs"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create Song"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["Title"]
            </th>
            <th>
                @Localizer["ReleaseDate"]
            </th>
            <th>
                @Localizer["Rank"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rank)
    </td>
    <td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
        <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
    </td>
</tr>}
    </tbody>
</table>
